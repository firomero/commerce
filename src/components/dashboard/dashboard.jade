section.bg-gray

  //carousel start
  div(uib-carousel active="$ctrl.active" interval="$ctrl.myInterval" no-wrap="$ctrl.noWrapSlides" style="margin-top:130px")
    div(uib-slide ng-repeat="slide in $ctrl.slides track by slide.id" index="slide.id")
      img(ng-src="{{slide.image}}")
      div.carousel-caption
        div.row.text-left
          h4.mb-0.col-lg-10 {{slide.text}}
        div.row.text-left
          h2.mb-0.col-lg-10 {{slide.text1}}
        div.row.text-left
          h1.mt-0.col-lg-10 {{slide.text2}}
          button.button-success.col-lg-2 SIMULAR

  //carousel end


  div.container.dashboard
    
    div.row.card-container
      div.col-lg-8.col-md-8.col-sm-8
        label.title SOLICITUDES
      div.col-lg-4.col-md-4.col-sm-4
        label.title PRODUCTOS
      
    div.row
      div.col-lg-8.col-md-8.col-sm-8
        div.row(ng-if="$ctrl.currentCompany.rol == $ctrl.ROL_1")
          div.col-lg-6.col-md-6.poster
            md-card.notification
              div.row.p-15px
                div.col-lg-7.col-md-7
                  div
                    label.title Transferencias
                  div
                    span.sub-title Por un Monto total de:
                  div
                    h3.mt-1.mb-1 $933.125.000
                  div
                    span.sub-title Lorem ipsum dolor sit amet, consectetur

                div.col-lg-5.col-md-5
                  div
                    ui-knob(value="$ctrl.rating.transferencias.value" options="$ctrl.rating.transferencias.options")
                  //- (knob model="$ctrl.rating")
            div.action-container.custom.first
              div.text-center
                md-button.md-fab.success
                  i.material-icons.rotate90 import_export
              div.button-text.text-center Ver Transferencias
              
          div.col-lg-6.col-md-6.poster
            md-card.notification
              div.row.p-15px
                div.col-lg-7.col-md-7
                  div
                    label.title Destinatarios
                  div
                    span.sub-title Nuevos usuarios estan esperando su aprobación
                  div.mt-1
                    span.c-green.link Marcelo Perez Ignacio Gonzalez y 2 más
                  
                div.col-lg-5.col-md-5
                  div
                    ui-knob(value="$ctrl.rating.destinatarios.value" options="$ctrl.rating.destinatarios.options")
            div.action-container.custom
              div.text-center
                md-button.md-fab.success
                  i.material-icons people
              div.button-text.text-center Ver Destinatarios

        div.row(ng-if="$ctrl.currentCompany.rol == $ctrl.ROL_2")
          div.col-lg-12.col-md-12.poster
            md-card.notification
              div.row.p-15px
                div.col-lg-5.col-md-5
                  div
                    label.title Estado de Mis Solicitudes Diarias
                  div
                    span.sub-title Por un Monto total de:
                  div
                    h3.mt-1.mb-1 $100.950.000
                  div
                    span.sub-title Lorem ipsum dolor sit amet, consectetur
                div.col-lg-7.col-md-7.pl-0
                  div.grap(ng-repeat="grap in $ctrl.rating.solicitudes")
                    ui-knob(value="grap.value" options="grap.options")
            div.action-container.custom
              div.text-center
                md-button.md-fab.success
                  i.material-icons list
              div.button-text.text-center Ver Todas

      div.col-lg-4.col-md-4.col-sm-4
        div.row
          div.col-lg-12.col-md-12.poster
            md-card.notification
              div.row.p-15px
                div.col-lg-7.col-md-7
                  div
                    label.title Factoring
                  div
                    span.sub-title Por un Monto total de:
                  div
                    h3.mt-1.mb-1 $495.000.000
                  div
                    span.sub-title 90 días plazo
                div.col-lg-5.col-md-5
                  div
                    ui-knob(value="$ctrl.rating.factoring.value" options="$ctrl.rating.factoring.options")
            div.action-container.custom
              div.action.text-center
                md-button.md-fab.success
                div.button-text.text-center Label

              div.action.text-center.ml-1
                md-button.md-fab.success
                div.button-text.text-center Label
                
    //list account
    div.mt-8
      account-list(list="$ctrl.currentCompany.accounts" ng-if="!$ctrl.loadAccounts")
    //aca es donde debo ponwe el ui-view para que todas las rutas entren por ahi