//header star
header
  md-toolbar.md-hue-2
    div.md-toolbar-tools
      div.row.w-100.m-0
        div.logo
          div.column.mr-2.visible-md.visible-sm.visible-xs
            a.pointer(ng-click="openToggle('left')")
              i.material-icons.menu-icon dehaze
          div.column.pt-15px
            img(src="images/logoBanco100.png")
        div.user-profile.visible-lg
          div.column.mr-1-5
            ul.links
              li 
                a Ayuda
              li 
                a FAQ
              li 
                a Contacto

          div.column.user-login
            div.column.mr-15px
              div.pt-15px
                a.pointer
                  img.user-logo(src="images/user.png")
            div.column.company-selector-container
              label.user-fullname {{userLogin.fullName}}
              md-menu
                a.pointer.company-selector(ng-click="$mdMenu.open($event)")
                  span {{currentCompany.name}}
                  span
                    i.material-icons arrow_drop_down

                md-menu-content(width="5")
                  md-menu-item(ng-repeat="item in userCompanies" ng-class="{'selected': item.nameID == currentCompany.nameID}")
                    a(ng-click="$mdMenu.close();selectCompany(item);") {{item.name}}

            div.column.account-selector(ng-if="currentCompany.accounts.length && activeAccountSelector")
              md-menu
                a.pointer(ng-click="$mdMenu.open($event)")
                  span Cuenta Nº {{currentAccount.name}}
                  span
                    i.material-icons arrow_drop_down

                md-menu-content(width="2")
                  md-menu-item(ng-repeat="item in currentCompany.accounts" ng-class="{'selected': item.name == currentAccount.name}")
                    a(ng-click="$mdMenu.close();selectAccount(item);") {{item.name}}

          div.column.logout
            a.pointer(ng-click="logout()")
              i.material-icons exit_to_app
                //user login end

  //menu start 
  menu.visible-lg
  //header end
  
