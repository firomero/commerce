section.bg-gray.content-container
	div.container.users
		div.mt-4
			user-profiler.bg-toolbar(list="currentCompany.accounts" title="Usuarios Perfilados" rating="rating")
		div.pos-r.account-movement(ng-if="existAccounts")
			md-tabs.component.md-no-animation(md-dynamic-height ng-if="loadTabData")
				md-tab(label="ADMINISTRADORES")
					md-content.poster
						md-card.pt-15px.pl-15px.pr-15px.pos-r
							div.table-responsive
								table.table.custom
									thead.thead
										tr.tr
											th.th Rut
											th.th Nombres
											th.th A. Paterno
											th.th A. Materno
											th.th Tipo Apoderado
											th.th Estado
											th.th Telefono
									tbody.tbody
										tr.tr.tr-container(ng-repeat="item in users" ng-class="{'odd': $index % 2 == 0}")
											td.td.plus-icon
												i.material-icons.add.mr-2(ng-if="!item.plus" ng-click="item.plus = !item.plus") add
												i.material-icons.remove.mr-2(ng-if="item.plus" ng-click="item.plus = !item.plus") remove
												span {{item.rut}}
											td.td {{item.nombre}}
											td.td {{item.padre}}
											td.td {{item.madre}}
											td.td
												status(icon="{{item.tipo.icon}}" b-class="{{item.tipo.class}}" text="{{item.tipo.text}}")
											td.td
												status(icon="{{item.estado.icon}}" b-class="{{item.estado.class}}" text="{{item.estado.text}}")
											td.td {{item.tel}}
								div.row.m-0.pt-1.pb-1
									button.button-default.button-load.col-lg-offset-5.col-lg-2.col-md-offset-5.col-md-2.col-sm-offset-4.col-sm-4.col-xs-offset-4.col-xs-6(ng-if="$ctrl.lastMovementPagination" ng-click="pagination('lastMovement')") CARGAR M&Aacute;S
